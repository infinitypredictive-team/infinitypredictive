# Infinity Predictive - Environment Configuration Example
# Copy this file to .env and update the values as needed

# =============================================================================
# AZURO INTEGRATION
# =============================================================================

# Azuro API Configuration
VITE_AZURO_API_URL=https://api.azuro.org
VITE_AZURO_WS_URL=wss://api.azuro.org
VITE_AZURO_API_KEY=your_azuro_api_key_here

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# Network Configuration
VITE_CHAIN_ID=137
VITE_RPC_URL=https://polygon-rpc.com

# RPC Provider Keys (Optional - for better performance)
VITE_ALCHEMY_API_KEY=your_alchemy_api_key_here
VITE_INFURA_API_KEY=your_infura_api_key_here

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Data Source Configuration
VITE_USE_MOCKS=true
VITE_FEATURE_FLAGS=leaderboards:false,tournaments:false,tracker:false,rewards:false

# =============================================================================
# REAL-TIME CONFIGURATION
# =============================================================================

# Server-Sent Events (Alternative to WebSocket)
VITE_USE_SSE=false
VITE_AZURO_SSE_URL=https://api.azuro.org/events

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================

# WalletConnect (Phase 2)
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Node.js Configuration
NODE_VERSION=18
NPM_VERSION=9

# =============================================================================
# DEPLOYMENT CONFIGURATIONS
# =============================================================================

# Production Configuration (Set VITE_USE_MOCKS=false for live data)
# VITE_USE_MOCKS=false
# VITE_FEATURE_FLAGS=leaderboards:false,tournaments:false,tracker:false,rewards:false

# Staging Configuration
# VITE_USE_MOCKS=true
# VITE_FEATURE_FLAGS=leaderboards:true,tournaments:false,tracker:true,rewards:false

# Development Configuration
# VITE_USE_MOCKS=true
# VITE_FEATURE_FLAGS=leaderboards:true,tournaments:true,tracker:true,rewards:true

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# Analytics (Optional)
# VITE_GA_TRACKING_ID=your_google_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn

# Custom Domain (Optional)
# VITE_CUSTOM_DOMAIN=your-domain.com

# =============================================================================
# NOTES
# =============================================================================

# 1. For production deployment, set VITE_USE_MOCKS=false
# 2. For testing with mock data, set VITE_USE_MOCKS=true
# 3. Feature flags control which features are enabled
# 4. RPC keys are optional but recommended for better performance
# 5. WalletConnect is for Phase 2 mobile wallet support
